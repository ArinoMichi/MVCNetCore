@model List<Enfermo>

<h1>Enfermos </h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>APELLIDO</th>
            <th>NUMERO SEGURIDAD SOCIAL</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Enfermo enf in Model)
        {
            <tr>
                <td>@enf.Apellido</td>
                <td>@enf.NSS</td>
                    <td>
                        <a asp-action="Details" asp-controller="Enfermos" class="btn btn-info" asp-route-idEnfermo="@enf.Inscipcion">Detalles</a>
                    <a asp-action="Delete" asp-controller="Enfermos" class="btn btn-info" asp-route-id="@enf.Inscipcion" >Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>