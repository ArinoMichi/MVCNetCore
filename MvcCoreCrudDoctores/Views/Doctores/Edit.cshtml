@model Doctor

<div class="text-center">
    <h1 class="mb-4">Crear Nuevo Doctor</h1>
    <form method="post" class="mx-auto text-center" style="max-width: 400px;">
        <div class="form-group">
            <label for="IdDoctor">ID Doctor:</label>
            <input type="number" name="IdDoctor" class="form-control" readonly value="@Model.IdDoctor" />
        </div>
        <div class="form-group">
            <label for="IdHospital">ID Hospital:</label>
            <input type="number" name="IdHospital" class="form-control" value="@Model.IdHospital" />
        </div>

        <div class="form-group">
            <label for="Apellido">Apellido:</label>
            <input type="text" name="Apellido" class="form-control" value="@Model.Apellido" />
        </div>

        <div class="form-group">
            <label for="Especialidad">Especialidad:</label>
            <input type="text" name="Especialidad" class="form-control" value=@Model.Especialidad/>
        </div>

        <div class="form-group">
            <label for="Salario">Salario:</label>
            <input type="number" name="Salario" class="form-control" value=@Model.Salario />
        </div>
        <br />
        <button type="submit" class="btn btn-warning btn-block">Actualizar</button>
    </form>
</div>
