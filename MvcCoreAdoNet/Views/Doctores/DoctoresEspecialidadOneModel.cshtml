@model ModelDoctores

<h1>Lista de doctores</h1>
<form method="post" class="mt-3">
    <div class="row">
        <div class="col-6">
            <select name="especialidad" class="form-select">
                @foreach (string especialidad in Model.Especialidades)
                {
                    <option value="@especialidad">@especialidad</option>
                }
            </select>
        </div>
        <div class="col-6">
            <button class="btn btn-info w-100 small">Filtrar</button>
        </div>

    </div>
</form>

<div class="card mt-4 border-bottom-0">
    <table class="table mb-0">
        <thead class="small table-secondary mt-1">
            <tr>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor doctor in Model.Doctores)
            {
                <tr>

                    <td class="fw-bold">@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                </tr>
            }
        </tbody>
    </table>
</div>